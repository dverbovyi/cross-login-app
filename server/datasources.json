{
  "Facebook": {
    "name": "Facebook",
    "connector": "rest",
    "debug": false,
    "options": {
      "headers": {
        "accept": "application/json",
        "content-type": "application/json"
      },
      "strictSSL": false
    },
    "operations": [
      {
        "template": {
          "method": "GET",
          "url": "https://graph.facebook.com/v2.8/me/{resource}",
          "query": {
            "access_token": "{token}",
            "fields": "picture,name"
          },
          "options": {
            "strictSSL": true,
            "useQuerystring": true
          },
          "responsePath": ""
        },
        "functions": {
          "find": [
            "token",
            "resource"
          ]
        }
      }
    ]
  }
}